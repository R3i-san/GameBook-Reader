<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GBReaderCremaL.Avalonia.Controls.BooksControl">
    
    <WrapPanel x:Name="BookPanel" Orientation="Vertical" Margin="10">
        <TextBlock x:Name="Book" PointerPressed="View_Details" FontSize="16" Background="pink" Padding="5"/>
        <Button x:Name="Button" Background="white" Click="Read"></Button>
    </WrapPanel>
    
</UserControl>
